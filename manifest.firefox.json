{
    "manifest_version": 3,
    "name": "Grokness",
    "version": "1.0.2",
    "description": "A cute Grok extension",
    "icons": {
        "16": "assets/logo-16.png",
        "32": "assets/logo-32.png",
        "48": "assets/logo-48.png",
        "128": "assets/logo-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://grok.com/*",
                "*://*.grok.com/*"
            ],
            "js": [
                "PluginManager.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "*://grok.com/*",
        "*://*.grok.com/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "grokness@prism.dev"
        }
    }
}
